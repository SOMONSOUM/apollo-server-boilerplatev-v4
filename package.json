    "@types/express": "^4.17.21",
    "@types/node": "^22.5.5",
    "dotenv": "^16.4.5",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.6",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.7.0",

    "@types/express": "^4.17.17",
    "@types/node": "^18.16.3",
    "dotenv": "^16.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",

{
  "name": "apollo-server-v4",
  "version": "1.0.0",
  "description": "This is a sample apollo server version 4 setup",
  "main": "server.ts",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/server.js",
    "dev": "nodemon src/server.ts",
    "generate": "yarn generate:prisma && yarn generate:codegen",
    "generate:prisma": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:deploy": "prisma migrate deploy",
    "generate:codegen": "graphql-codegen --config codegen.yml"
  },
  "dependencies": {
    "@apollo/server": "^4.11.0",
    "@escape.tech/graphql-armor": "^3.0.1",
    "@graphql-tools/schema": "^10.0.6",
    "@pothos/core": "^4.2.0",
    "@prisma/client": "^5.19.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "ejs": "^3.1.10",
    "express": "^4.21.0",
    "express-rate-limit": "^7.4.0",
    "graphql": "^16.9.0",
    "graphql-import": "^1.0.2",
    "graphql-middleware": "^6.1.35",
    "graphql-tag": "^2.12.6",
    "graphql-upload": "^16.0.2",
    "graphql-upload-ts": "^2.1.2",
    "helmet": "^7.1.0",
    "jose": "^5.9.2",
    "prisma": "^5.19.1",
    "typescript": "^5.6.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/introspection": "^4.0.3",
    "@graphql-codegen/typescript": "^4.0.9",
    "@graphql-codegen/typescript-resolvers": "^4.2.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/graphql-upload": "^16.0.7",
    "@types/node": "^22.5.5",
    "dotenv": "^16.4.5",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.6",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.7.0",
    "ttypescript": "^1.5.15",
    "typescript-transform-paths": "^3.5.1"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
